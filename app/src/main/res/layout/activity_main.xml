<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imgPerfil"
        android:layout_width="95dp"
        android:layout_height="65dp"
        android:layout_marginStart="6dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"

        android:layout_marginBottom="236dp"
        app:layout_constraintBottom_toBottomOf="@id/mainCrearVoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icono_imagen" />

    <ImageView
        android:id="@+id/logo"
        android:layout_width="179dp"
        android:layout_height="174dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="59dp"
        app:layout_constraintBottom_toTopOf="@+id/mainCrearVoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.537"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sainorum" />

    <Button
        android:id="@+id/mainCrearVoto"
        android:layout_width="315dp"
        android:layout_height="68dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="32dp"

        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:text="Crear votación"
        app:layout_constraintBottom_toTopOf="@+id/mainUnirseVoto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo" />

    <Button
        android:id="@+id/mainUnirseVoto"
        android:layout_width="315dp"
        android:layout_height="68dp"
        android:layout_marginStart="48dp"

        android:layout_marginEnd="48dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:text="Unirse a una votación"
        app:layout_constraintBottom_toTopOf="@+id/mainResultadoEncuesta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainCrearVoto" />

    <Button
        android:id="@+id/mainResultadoEncuesta"
        android:layout_width="315dp"
        android:layout_height="68dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"

        android:layout_marginBottom="32dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:text="Ver resultado de la encuesta"
        app:layout_constraintBottom_toTopOf="@+id/mainSalir"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainUnirseVoto" />

    <Button
        android:id="@+id/mainSalir"
        android:layout_width="315dp"
        android:layout_height="68dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:text="Salir"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainResultadoEncuesta" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".joinAPoll">

    <EditText
        android:id="@+id/joinId"
        android:layout_width="341dp"
        android:layout_height="39dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="131dp"
        android:ems="10"
        android:hint="Introduce la id de la votación"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@+id/btnJoinAPoll"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnJoinAPoll"
        android:layout_width="260dp"
        android:layout_height="70dp"
        android:layout_marginStart="75dp"
        android:layout_marginBottom="145dp"
        android:background="@drawable/common_google_signin_btn_icon_dark_normal_background"
        android:text="Unirse a la votación"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="234dp"
        android:layout_height="207dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="46dp"
        android:layout_marginEnd="89dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sainorum" />
</androidx.constraintlayout.widget.ConstraintLayout>
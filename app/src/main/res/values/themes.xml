<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppVote" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:background">@drawable/gradient_background</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="blackTitle">
        <item name="android:textColor">#3E3D3D</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textPolicies">
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.AppVote.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AppVote.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.AppVote.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>